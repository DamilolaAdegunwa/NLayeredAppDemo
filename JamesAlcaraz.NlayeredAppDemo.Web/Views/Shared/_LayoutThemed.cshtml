<!DOCTYPE html>
<html>
<!--[if IE 9 ]><html class="ie9"><![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>NLayered App Demo</title>

    <!-- Vendor CSS -->
    <link href="~/app/vendors/bower_components/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/app/vendors/bower_components/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet">
    <link href="~/app/vendors/bower_components/material-design-iconic-font/dist/css/material-design-iconic-font.min.css" rel="stylesheet">
    <link href="~/app/vendors/bower_components/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.min.css" rel="stylesheet">

    <!-- CSS -->
    <link href="~/app/css/app_1.min.css" rel="stylesheet">
    <link href="~/app/css/app_2.min.css" rel="stylesheet">
</head>
<body>
    
    @Html.Partial("~/Views/Shared/Partials/_HeaderPartial.cshtml")
    <section id="main">
        
        @Html.Partial("~/Views/Shared/Partials/_SideNavPartial.cshtml")
        @Html.Partial("~/Views/Shared/Partials/_ChatPanelPartial.cshtml")

        <section id="content">
            <div class="container">
                <div class="card">
                    @RenderBody()
                </div>
            </div>
        </section>
    </section>

    @Html.Partial("~/Views/Shared/Partials/_FooterPartial.cshtml")

    <!-- Page Loader -->
    @Html.Partial("~/Views/Shared/Partials/_LoaderPartial.cshtml")

    <!-- Javascript Libraries -->

    <script src="~/app/vendors/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/app/vendors/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
                 
    <script src="~/app/vendors/bower_components/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/app/vendors/bower_components/Waves/dist/waves.min.js"></script>
    <script src="~/app/vendors/bootstrap-growl/bootstrap-growl.min.js"></script>
    <script src="~/app/vendors/bower_components/sweetalert2/dist/sweetalert2.min.js"></script>

    <!-- Placeholder for IE9 -->
    <!--[if IE 9 ]>
        <script src="/app/vendors/bower_components/jquery-placeholder/jquery.placeholder.min.js"></script>
    <![endif]-->

    <script src="~/app/js/app.min.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>